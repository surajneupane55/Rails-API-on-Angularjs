<div clasS="col-md-2"></div>
<div clasS="col-md-8">
<div class="panel panel-default">

    <h3 class="text-center"><strong>Sign in</strong></h3>



      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %>
            <div class="col-md-7">
              <%= f.email_field :email, autofocus: true , class: "form-control" %>
            </div>
          </div>
      <span class="text-center"><strong>Guest User</strong></span>
      <span class="text-center"><strong>email: abc@123.com</strong></span>


      <div class="form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
            <div class="col-md-7">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>
      <span class="text-center"><strong>password: 12345678</strong></span>
      <br>

          <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <div class="col-md-8 col-sm-offset-2">
                  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                </div>
              </div>
          <% end -%>

          <div class="form-group">
            <div class="col-md-6 col-sm-offset-2">
              <%= f.submit "Sign in", class: 'btn btn-primary' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 col-sm-offset-2">
              <%= render "devise/shared/links" %>
            </div>
          </div>

      <% end %>
</div>
</div>
<div clasS="col-md-2"></div>
